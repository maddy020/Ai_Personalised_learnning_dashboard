generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model User {
  id               Int        @id @default(autoincrement())
  email            String     @unique
  name             String
  password         String
  interestedFields String[]
  skillLevel       SkillLevel @default(INTERMEDIATE)
  avatar           String?
  createdAt        DateTime   @default(now())
}
